#!/bin/bash -eux

case "$1" in
  -v|--version)
    version="$2"
esac

cp -r ${OPENSHIFT_EXSERVER_DIR}/versions/${version}/template/.openshift ${OPENSHIFT_EXSERVER_DIR}/template

# create and populate directory with project's version controlled artifacts
mkdir -p ${OPENSHIFT_EXSERVER_DIR}/template/.openshift/config
#cp ${OPENSHIFT_EXSERVER_DIR}/conf/* ${OPENSHIFT_EXSERVER_DIR}/template/.openshift/config

echo "$version" > "$OPENSHIFT_EXSERVER_DIR/env/OPENSHIFT_EXSERVER_VERSION"

